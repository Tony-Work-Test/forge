{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nx NestJS App",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "nx",
        "serve",
        "tempo-api", // Replace with your NestJS app name in the Nx workspace
        
      ],
    // Remove the "port" property
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/apps/your-app-name/**/*.js"] // Adjust the path according to your output directory structure
    }
  ]
}